[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    .env,
    env
max-complexity = 10
per-file-ignores =
    # Ignore imported but unused in __init__ files
    __init__.py: F401
    # Allow longer lines in test files
    tests/*: E501 